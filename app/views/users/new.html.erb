<div class="formy">
	<%= form_for(:user, url: users_path) do |f| %>
		<div class="form-group">
			<%= f.label 'Saisis ton e-mail' %>
			<%= f.email_field :email, class:"form-control", placeholder:"E-mail" %>
		</div>
		<div class="form-group">
			<%= f.label 'Saisis un mot de passe' %>
			<%= f.password_field :password, class:"form-control", placeholder:"Mot de passe" %>
		</div>
		<div class="form-group">
			<%= f.label :remember_me, class: "checkbox inline" do %>
        		<%= f.check_box :remember_me %><span>Se souvenir de moi</span>
      		<% end %>
		</div>
		<%= f.submit "S'inscrire", class:"btn btn-primary" %>
	<% end %>
